<UserControl x:Class="Capercali.WPF.UserControls.EditRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="UserControl">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <TextBlock Text="{Binding Label, ElementName=UserControl}" Margin="5,5,10,0" Width="100px"  />
            <TextBox  Text="{Binding Value, ElementName=UserControl, Mode=TwoWay}" Width="100px" />
        </StackPanel>
    </Grid>
</UserControl>
