<UserControl x:Class="Capercali.WPF.UserControls.RunnerEditForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:Capercali.WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <userControls:EditTextRow Label="{DynamicResource sicard}" Value="{Binding SiNumber}"></userControls:EditTextRow>
        <userControls:EditTextRow Label="{DynamicResource firstName}" Value="{Binding FirstName}"></userControls:EditTextRow>
        <userControls:EditTextRow Label="{DynamicResource lastName}" Value="{Binding LastName}"></userControls:EditTextRow>
        <userControls:EditTextRow Label="{DynamicResource location}" Value="{Binding Location}"></userControls:EditTextRow>
        <userControls:EditTextRow Label="{DynamicResource club}" Value="{Binding Club}" ></userControls:EditTextRow>
    </StackPanel>
</UserControl>
