<UserControl x:Class="Capercali.WPF.UserControls.EditTextRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:Capercali.WPF.UserControls"
             mc:Ignorable="d"
             x:Name="editTextRow">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0" DataContext="{Binding ElementName=editTextRow}">
            <userControls:EditRow Label="{Binding Label, ElementName=editTextRow}" >
                <TextBox  Text="{Binding Value, Mode=TwoWay}" Width="100px" />
            </userControls:EditRow>
            
        </StackPanel>
    </Grid>
</UserControl>
