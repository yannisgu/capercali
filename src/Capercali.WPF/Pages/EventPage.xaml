<UserControl x:Class="Capercali.WPF.Pages.EventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:userControls="clr-namespace:Capercali.WPF.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="700"
      >

    <Grid>
        <TabControl>


            <TabItem Header="configuration">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TabControl FontWeight="Bold" >
                        <TabItem Header="general">
                            <StackPanel Orientation="Vertical" >
                                <userControls:EditRow Label="Name" Value="{Binding EventName}" />
                                <userControls:EditRow Label="Zero hour" Value="{Binding EventZeroTime}" />
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="course">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="30"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Courses}" SelectedItem="{Binding SelectedCourse}" CanUserAddRows="True" Grid.Column="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="name" Binding="{Binding Name}"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <DataGrid AutoGenerateColumns="False" Grid.Column="3" ItemsSource="{Binding Controls}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn IsReadOnly="True" Header="Num" Binding="{Binding Number}"></DataGridTextColumn>
                                        <DataGridTextColumn IsReadOnly="False" Header="Code" Binding="{Binding ControlNumber}"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>

                        </TabItem>
                    </TabControl>

                </Grid>
            </TabItem>
            <TabItem Header="runners"></TabItem>
        </TabControl>

    </Grid>
</UserControl>